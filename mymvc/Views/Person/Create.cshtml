@model mymvc.Models.Person
@{
    ViewData["Title"] = "Create";
}

<h1>Create a person</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <input asp-for="PersonId" class="form-control" placeholder="Enter" />
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" placeholder="Enter" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" placeholder="Enter" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mypagebutton"></div>
            <div style="display: flex;">
              <div>
                  <input type="submit" value="Create" class="btn btn-primary" />
              </div>
              <div style="margin-left: 5px;">
                <a asp-action="Index" class="btn btn-danger">Back</a>
              </div>
            </div>
        </form>
    </div>
</div>

 